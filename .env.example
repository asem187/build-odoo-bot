# Rename this file to `.env` and fill in your credentials
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=
ODOO_URL=
ODOO_DB=
ODOO_USERNAME=
ODOO_PASSWORD=
# Token required for API requests
API_TOKEN=
# Use 'embedding' for embedding-based routing
CLASSIFIER_MODE=keywords
# Optional model and API base customization
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# Enable streaming responses from the LLM (true/false)
LLM_STREAMING=false
# Optional paths for documentation ingestion
DOCS_PATH=data/docs
INDEX_PATH=data/index
ODOO_DOCS_REPO=https://github.com/odoo/odoo.git
ODOO_DOCS_BRANCH=master
# Interval in hours for automatic doc ingestion (0 to disable)
INGEST_INTERVAL_HOURS=0
# Optional host/port for start_bot.py and uvicorn
HOST=0.0.0.0
PORT=8000
